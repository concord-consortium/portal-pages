{
  "name": "portal-pages",
  "version": "1.0.0",
  "description": "Concord Portal Pages",
  "main": "server/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server/bin/www",
    "start:dev": "cross-env NODE_ENV=development node server/bin/www",
    "lint": "standard --fix \"src/**/*.js\"",
    "build": "npm run lint && npm run build-portals && npm run build-library",
    "build-portals": "node scripts/build.js",
    "build-library": "cross-env NODE_ENV=production webpack",
    "live-server": "./node_modules/.bin/live-server --cors --verbose --no-browser --port=10000 ./dest",
    "webpack-serve": "webpack-serve"
  },
  "standard": {
    "globals": [
      "React",
      "ReactDOM",
      "jQuery",
      "Portal",
      "PortalPages",
      "Formsy",
      "Select",
      "ga",
      "OfferingRunStatus"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/portal-pages.git"
  },
  "author": "Doug Martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concord-consortium/portal-pages/issues"
  },
  "homepage": "https://github.com/concord-consortium/portal-pages#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "babel-loader": "^8.0.0-beta.2",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "live-server": "^1.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "sass-loader": "^7.0.1",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.1.0",
    "webpack-serve": "^2.0.2"
  },
  "dependencies": {
    "@concord-consortium/portal-report": "1.7.0-pre.5",
    "body-parser": "~1.17.1",
    "cheerio": "^1.0.0-rc.1",
    "chokidar": "^1.7.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.0.0",
    "debug": "~2.6.3",
    "express": "^4.15.3",
    "faye-websocket": "^0.11.1",
